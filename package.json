{
  "name": "workorbit-backend",
  "version": "1.1.0",
  "description": "Backend API for WorkOrbit Employee Management System",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testMatch='**/*.integration.test.js'",
    "db:create": "node -e \"require('./src/config/database').connectDB()\"",
    "db:sync": "node -e \"require('./src/config/database').sequelize.sync({alter: true})\"",
    "db:reset": "node -e \"require('./src/config/database').sequelize.sync({force: true})\"",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "health": "curl http://localhost:5000/health",
    "docs": "open http://localhost:5000/docs",
    "onboarding:diagnose": "node src/scripts/diagnose-onboarding.js",
    "onboarding:seed:all": "node src/scripts/seed-all-organizations.js",
    "onboarding:seed:org": "node src/scripts/seed-onboarding-for-org.js",
    "onboarding:cleanup": "node src/scripts/cleanup-duplicate-tasks.js",
    "onboarding:test": "node src/scripts/test-onboarding-api.js",
    "email:test": "node test-email-service.js",
    "email:test:no-config": "node test-email-no-config.js"
  },
  "keywords": [
    "employee-management",
    "hr",
    "payroll",
    "attendance"
  ],
  "author": "WorkOrbit",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.893.0",
    "@aws-sdk/s3-request-presigner": "^3.893.0",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "bull": "^4.16.5",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.2",
    "jspdf-autotable": "^5.0.2",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "multer-s3": "^3.0.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "prom-client": "^15.1.0",
    "qrcode": "^1.5.4",
    "redis": "^5.8.2",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5",
    "onesignal-node": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  }
}
